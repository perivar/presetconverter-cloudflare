{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    /* Paths: */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    },

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    // "verbatimModuleSyntax": true, // force import type
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* React */
    "jsx": "react-jsx",

    /* Strictness */
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* If NOT transpiling with TypeScript: */
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true, // Vite takes care of building everything, not tsc.

    /* If transpiling with TypeScript: */
    "outDir": "./build-tmp",

    /* If your code doesn't run in the DOM: */
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    /* Types */
    // for some reason using typeRoots does not work, jest types are not properly included
    // "typeRoots": ["./node_modules", "./node_modules/@types", "./app/lib/types"],
    "types": [
      "@remix-run/cloudflare",
      "vite/client",
      "@cloudflare/workers-types/2023-07-01",
      "jest"
    ]
  }
}
